<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MTL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorPrimarySurface">@color/color_surface</item>
        <item name="colorOnError">@color/color_on_error</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <!-- System bar attributes -->
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <!-- Type attributes -->
        <item name="android:fontFamily">@font/proxima_nova_soft_regular</item>
        <item name="fontFamily">@font/proxima_nova_soft_regular</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MTL.Headline6</item>
        <item name="textAppearanceButton">@style/TextAppearance.MTL.Button</item>
        <!-- Shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MTL.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MTL.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MTL.LargeComponent</item>
        <!-- Widget style attributes -->
        <item name="toolbarStyle">@style/Widget.MTL.Toolbar</item>
        <item name="searchViewStyle">@style/Widget.MTL.SearchView</item>
        <item name="bottomNavigationStyle">@style/Widget.MTL.BottomNavigationView</item>
        <item name="bottomAppBarStyle">
            @style/Widget.MaterialComponents.BottomAppBar.PrimarySurface
        </item>
        <item name="appBarLayoutStyle">@style/Widget.MTL.AppBarLayout</item>
        <item name="textInputStyle">@style/Widget.MTL.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.MTL.CardView</item>
        <item name="chipStyle">@style/Widget.MTL.Chip</item>
        <item name="buttonStyle">@style/Widget.MTL.Button</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:progressBarStyle">@style/Widget.MTL.ProgressBar</item>
        <item name="bottomSheetStyle">@style/Widget.MTL.BottomSheet</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.MTL.BottomSheetDialog</item>
        <item name="recyclerViewStyle">@style/Widget.MTL.RecyclerView</item>
    </style>

    <style name="Theme.MTL.Main">
        <!-- System bar attributes -->
        <item name="android:statusBarColor">@color/color_status_bar_main</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">
            @bool/window_light_system_bar
        </item>
        <item name="android:navigationBarColor">@color/color_navigation_bar_main</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">
            @bool/window_light_system_bar
        </item>
    </style>

    <style name="Theme.MTL.Sing" parent="Theme.MTL.Main">
        <item name="android:navigationBarColor">@color/color_navigation_bar_sing</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">
            @bool/window_light_system_bar
        </item>
    </style>

    <style name="Theme.MTL.Present">

    </style>

    <style name="ThemeOverlay.MTL.BottomSheetDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">
            @bool/window_light_system_bar
        </item>
    </style>

    <style name="Theme.MTL.Dialog">
        <item name="android:windowBackground">@color/scrim</item>
    </style>

    <style name="Theme.MTL.ProgressAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
